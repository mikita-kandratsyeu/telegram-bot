{
  "name": "chat-gpt-bot",
  "version": "3.0.0",
  "repository": "git@github.com:mikita-workspace/chat-gpt-bot.git",
  "description": "NovaChat | GPT Client",
  "author": "Mikita Kandratsyeu <nickondr.production@gmail.com>",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.build.json && copyfiles -u 1 -e \"**/*.ts\" \"./src/locales/**/*.ftl\" \"./build\" --flatten",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint . --ext .ts --ignore-pattern node_modules/",
    "lint:fix": "eslint . --ext .ts --ignore-pattern node_modules/ --fix",
    "lint:ci": "eslint . --plugin file-progress --rule \"file-progress/activate: 0\" --ext .ts --ignore-pattern node_modules/",
    "lint-staged": "lint-staged --quiet",
    "type:check": "tsc",
    "test": "jest --coverage --config jest.config.ts",
    "test:ci": "yarn test --silent",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ]
  },
  "dependencies": {
    "@date-fns/utc": "^1.1.0",
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/conversations": "^1.1.1",
    "@grammyjs/hydrate": "^1.3.1",
    "@grammyjs/i18n": "^1.0.1",
    "@grammyjs/menu": "^1.2.0",
    "@grammyjs/ratelimiter": "^1.1.6",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-free": "^2.2.0",
    "@grammyjs/storage-mongodb": "^2.2.0",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "axios": "^1.3.6",
    "copyfiles": "^2.4.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "gpt-3-encoder": "^1.1.4",
    "grammy": "^1.16.0",
    "json2md": "^2.0.0",
    "node-cache": "^5.1.2",
    "typescript": "^5.0.4",
    "winston": "^3.8.2",
    "winston-slack-webhook-transport": "^2.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/crypto-js": "^4.1.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/json2md": "^1.5.4",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": "18.x"
  }
}
